<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rocketDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="12dp"
    android:background="@drawable/rounded"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iconRocket"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameRocket"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:fontFamily="@font/fontscreen"
        app:layout_constraintTop_toTopOf="@+id/iconRocket"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/iconRocket"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/country"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textSize="18dp"
        android:fontFamily="@font/fontscreen"
        app:layout_constraintTop_toBottomOf="@id/nameRocket"
        app:layout_constraintBottom_toTopOf="@id/firstFlight"
        app:layout_constraintStart_toEndOf="@id/iconRocket"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/firstFlight"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textSize="18dp"
        android:fontFamily="@font/fontscreen"
       android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/iconRocket"
        app:layout_constraintStart_toEndOf="@id/iconRocket"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>